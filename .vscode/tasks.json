{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Post Debug Cleanup",
            "command": "rm",
            "args": [
                "-rf",
                "./${fileBasenameNoExtension}.out*"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "detail": "Clean up files generated by the debugger"
        },
        {
            "label": "Multiple Commands Task",
            "type": "shell",
            "command": "echo \"damn\" && echo \"son\""
        }
    ],
    "version": "2.0.0"
}